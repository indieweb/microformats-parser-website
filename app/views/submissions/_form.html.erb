<%= form_with(model: submission, local: true) do |form| %>
  <% if submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% submission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :url, "URL" %>
    <%= form.text_area :url, id: :submission_url %>
  </div>

  <div class="field">
    <%= form.label :html, "HTML" %>
    <%= form.text_area :html, id: :submission_html %>
  </div>

  <div class="field">
    <%= form.label :base_url, "Base URL" %>
    <%= form.text_area :base_url, id: :submission_base_url %>
  </div>

  <div class="field">
    <%= form.label :save_html, "Save HTML?" %>
    <%= form.check_box :save_html, id: :submission_save_html %>
  </div>

  <div class="field">
    <%= form.label :render_html_in_page, "Render HTML in Page?" %>
    <%= form.check_box :render_html_in_page, id: :submission_render_html_in_page %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
